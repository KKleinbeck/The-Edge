<div class="the_edge" style="width: 100%; padding: 0 13% 0 13%;">
  <div class="hotbar-frame" style="width: 100%; aspect-ratio: 1729 / 235;">
    <div style="display: flex; height: 100%; padding: 2.5% 3% 2.5% 3%;">
      <div style="width: 8%;"> {{!-- Name and attr dice section --}}
        {{#if (checkEqual 1 (length actors 1))}}
          {{actors.[0]}}
        {{else}}
          <select style="height: 24px; width: 100%;">
            {{#each actors as |actor id|}}
              <option value="{{id}}" {{#if (checkEqual id ../selectedActorId)}}selected{{/if}}>{{actor}}</option>
            {{/each}}
          </select>
        {{/if}}
        <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 5px; margin-top: 5px; width: 100%; height: 65%">
          {{#each attributes as |attr|}}
            <div class="d20-{{attr}}" style="background-size: contain; background-repeat: no-repeat; background-position: center; margin-left: auto; margin-right: auto; width: 100%; height: 100%">
            </div>
          {{/each}}
        </div>
      </div>
      <div style="padding-left: 10pt;">
        <h3>{{genName "Counters"}}</h3>
        <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 5px; margin-top: 5px; width: 100%; height: 65%">
          {{#each counters as |counter|}}
            <div style="display: flex; align-items: center; gap: 5px;">
              <div style="color: white">{{counter.name}}</div>
              <div>{{counter.value}} / {{counter.max}}</div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>