<li class="chat-message message flexcol the_edge" data-message-id="{{message._id}}" {{#if borderColor}}style="border-color:{{borderColor}}" {{/if}}>
  <div class="message-content">
    {{{message.content}}}
    <header class="message-header flexrow">
      Why do you not render me
      <div style="display: flex; gap: 4px; align-items: center;">
        {{log user}}
        {{#if user.isGM}}
          <a class="button message-delete" data-action="deleteMessage" data-tooltip="CHATNOTIFICATION.DELETE"><i class="fas fa-trash"></i></a>
        {{/if}}
        {{#if isWhisper}}
          <span class="chatIndicator"><i data-tooltip="CHATNOTIFICATION.WHISPER" class="fas fa-eye-slash"></i></span>
        {{else}}
          <span class="chatIndicator"><i data-tooltip="CHATNOTIFICATION.PUBLIC MESSAGE" class="fas fa-eye"></i></span>
        {{/if}}
        {{#if message.blind}}
          <span class="privateMessageIndicator"><i data-tooltip="CHATNOTIFICATION.BLIND MESSAGE" class="fas fa-mask"></i></span>
        {{/if}}
      </div>
      <span class="message-metadata">
        <time class="message-timestamp">{{timeSince message.timestamp}}</time>
      </span>
    </header>
  </div>
  <!-- Chat Message Footer -->
  <div style="width: 100%; height: 30px;">
    <svg viewBox="0 0 100 8"
      style="overflow: visible;"
      xmlns="http://www.w3.org/2000/svg">
      <defs>
        <path id="item-footer-outline"
          d="M0 0 H40 L46 8 H94 L100 0" />
      </defs>

      <use href="#item-footer-outline"
        fill="var(--color-background-night-black)" />
      
      <use href="#item-footer-outline"
        stroke="var(--theme-color-secondary)"
        style="filter: drop-shadow(0 4px 4px var(--theme-color-secondary));"
        stroke-width="1"
        stroke-linejoin="miter"
        fill="none" />
    </svg>
  </div>
  <div style="display: flex; justify-content: space-between; transform: translateY(-29px);">
    <div>
      <div class="message-metadata">
        <time class="message-timestamp">{{timeSince message.timestamp}}</time>
      </div>
      <div style="display: flex; gap: 4px; align-items: center;">
      {{#if user.isGM}}
        <a class="button message-delete" data-action="deleteMessage" data-tooltip="CHATNOTIFICATION.DELETE"><i class="fas fa-trash"></i></a>
      {{/if}}
      {{#if isWhisper}}
        <span class="chatIndicator"><i data-tooltip="CHATNOTIFICATION.WHISPER" class="fas fa-eye-slash"></i></span>
      {{else}}
        <span class="chatIndicator"><i data-tooltip="CHATNOTIFICATION.PUBLIC MESSAGE" class="fas fa-eye"></i></span>
      {{/if}}
      {{#if message.blind}}
        <span class="privateMessageIndicator"><i data-tooltip="CHATNOTIFICATION.BLIND MESSAGE" class="fas fa-mask"></i></span>
      {{/if}}
      </div>
    </div>
    <h5 style="width: 52%; text-align: right; margin: 0; padding-right: 8%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis">
      {{#if message.speaker.alias}}
        {{message.speaker.alias}}
      {{else}}
        {{alias}}
      {{/if}}
    </h5>
  </div>
</li>
     