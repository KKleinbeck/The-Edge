<section
  class="tab {{tabs.biography.cssClass}}"
  data-group="primary"
  data-tab="biography"
  style="overflow-y: auto; overflow-x: hidden"
>
  <div class="title">
    <div class="section-title">{{genName "Biology"}}</div>
  </div>
  <div style="display: flex; justify-content: space-between;">
    <div style="white-space: nowrap;">
      <label for="Age">{{genName "Age"}}</label>
      <input name="system.age" id="Age" type="text" value="{{system.age}}" min="21" placeholder="Name" style="max-width: 40px; text-align: right;"/>
    </div>
    <div style="white-space: nowrap;">
      <label for="Sex Selector">{{genName "Sex"}}</label>
      <select class="selection-box" name="system.sex" id="Sex Selector" style="width: 75px; padding: 0 2px 0 0;">
        <option value="female" {{#if (checkEqual system.sex 'female')}}selected{{/if}}>{{genName "female"}}</option>
        <option value="male" {{#if (checkEqual system.sex 'male')}}selected{{/if}}>{{genName "male"}}</option>
        <option value="N.A." {{#if (checkEqual system.sex 'N.A.')}}selected{{/if}}>{{genName "N.A."}}</option>
      </select>
    </div>
    <div style="white-space: nowrap;">
      <label for="Height">{{genName "Height"}} [cm]</label>
      <input
        name="system.height" type="number" value="{{system.height}}" placeholder="165" min="0"
        style="max-width: 36px; text-align: right; padding: 0 2px 0 0;"
      />
    </div>
    <input name="system.race" type="text" value="{{system.race}}" placeholder="{{genName 'Race ...'}}" style="max-width: 80px; text-align: right;"/>
    <div style="white-space: nowrap;">
      <label for="Blood Type Selector">{{genName "Blood type"}}</label>
      <select class="selection-box" name="system.bloodType" id="Blood Type Selector" style="width: 50px; padding: 0 2px 0 0;">
        <option value="AB" {{#if (checkEqual system.bloodType 'AB')}}selected{{/if}}>AB</option>
        <option value="B" {{#if (checkEqual system.bloodType 'B')}}selected{{/if}}>B</option>
        <option value="A" {{#if (checkEqual system.bloodType 'A')}}selected{{/if}}>A</option>
        <option value="0" {{#if (checkEqual system.bloodType '0')}}selected{{/if}}>0</option>
      </select>
    </div>
    <div style="white-space: nowrap;">
      <label for="Handedness Selector">{{genName "Handedness"}}</label>
      <select class="selection-box" name="system.handedness" id="Handedness Selector" style="width: 60px; padding: 0 2px 0 0;">
        <option value="right" {{#if (checkEqual system.handedness 'right')}}selected{{/if}}>{{genName "right"}}</option>
        <option value="left" {{#if (checkEqual system.handedness 'left')}}selected{{/if}}>{{genName "left"}}</option>
      </select>
    </div>
  </div>
  <div class="title" style="padding-right: 10px;">
    <div class="section-title">{{genName "Counters"}}</div>
    <div title="{{ itemName 'Create Counter' }}" data-action="counterControl" data-subaction="create-counter" style="gap: 5px; cursor: pointer;">
      {{itemName "New Counter"}}
      <a><i class="fas fa-plus"></i></a>
    </div>
  </div>
  <div class="counter-list" style="padding: 0px 5px 0px 5px; overflow-y: hidden;">
    {{#each system.counters as |counter|}}
      <div class="counter" data-index="{{@index}}">
        {{#if (checkST counter.max 11)}}
          <div class="counter-box-list" style="max-width: 100%; justify-content: space-between">
            <div style="display: flex; align-items: center;">
              <a data-action="counterControl" data-subaction="decrease-counter"><i class="far fa-circle-minus"></i></a>
            </div>
            <div style="display: flex">
            {{#times counter.max}}
              {{#if (checkST this counter.value)}}
                {{> systems/the_edge/templates/generic/counter-token.hbs full=true level=this}}
              {{else}}
                {{> systems/the_edge/templates/generic/counter-token.hbs level=this}}
              {{/if}}
              {{#if (checkEqual this 4)}}
                {{#unless (checkST counter.max 6)}}
                  <div style="width: 5px;"></div> {{!-- Small Gap --}}
                {{/unless}}
              {{/if}}
            {{/times}}
            </div>
            <div style="display: flex; align-items: center;">
              <a data-action="counterControl" data-subaction="increase-counter"><i class="far fa-circle-plus"></i></a>
            </div>
          </div>
          <div class="counter-title">
            <a title="{{ itemName 'Delete Counter' }}" data-action="counterControl" data-subaction="delete">
              <i class="fas fa-trash"></i>
            </a>
            <input class="counter-name" value="{{counter.name}}" style="width: 70%;"/>
          </div>
        {{else}}
          <div class="counter-box-list" style="max-width: 100%; margin-top: 5px;">
            {{>
              systems/the_edge/templates/generic/progress-bar-modern.hbs
              valueEditable=true maxEditable=true nameEditable=true
              name=counter.name value=counter.value max=counter.max fillId="counter"
              inputClass="counter-input"
            }}
          </div>
        {{/if}}
      </div>
    {{/each}}
  </div>
  <div class="title">
    <div class="section-title">{{genName "Biography"}}</div>
  </div>
  <div style="padding-left: 10px;">
    {{#if editable}}
      <prose-mirror
        name="system.biography" button="true" editable="{{editable}}"
        toggled="false" value="{{system.biography}}" active="true"
      >
        {{{system.biography}}}
      </prose-mirror>
    {{else}}
      {{{system.biography}}}
    {{/if}}
  </div>
  <div class="title">
    <div class="section-title">{{genName "Notes"}}</div>
  </div>
  <div style="padding-left: 10px;">
    {{#if editable}}
      <prose-mirror
        name="system.notes" button="true" editable="{{editable}}"
        toggled="false" value="{{system.notes}}"
      >
        {{{system.notes}}}
      </prose-mirror>
    {{else}}
      {{{system.notes}}}
    {{/if}}
  </div>
</section>