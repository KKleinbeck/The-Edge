<section
  class="tab {{tabs.proficiencies.cssClass}}"
  data-group="primary"
  data-tab="proficiencies"
>
  {{#each prepare.system.profGroups as |profGroup|}}
    <div class="columned-page" style="gap: 0; justify-content: space-between; margin-bottom: 15px;">
      {{#each profGroup as |proficiencies category|}}
        <div style="width: 31.5%;">
          <div class="proficiency-box title" style="margin-bottom: 4px;">
            <div class="proficiency-title" style="text-transform: capitalize; font-size: 14px;">{{category}}</div>
            <div class="proficiency-column" style="text-align: center;">{{genName "Lvl"}}</div>
            <div class="proficiency-column" style="text-align: center;">{{genName "Sta"}}</div>
            <div class="proficiency-column-dice"></div>
            <div class="proficiency-column-dice"></div>
            <div class="proficiency-column-dice"></div>
          </div>
          {{#each proficiencies as |proficiency|}}
            <div class="proficiency-box">
              <div class="proficiency-title" style="font-size: 13px;">
                {{proficiencyName proficiency}}
              </div>
              <div class="proficiency-column">
                <input
                  class="core-value" data-target="system.proficiencies.{{category}}.{{proficiency}}.advances" type="number"
                  value="{{getProficiency ../../../actor category proficiency 'advances'}}" data-dtype="Number"
                  style="max-height: 20px; width: 24px; text-align: right; padding: 0 2px 0 0;"
                >
              </div>
              <div class="proficiency-column">
                <span class="output" style="width:27px; max-height: 21px; width: 24px; text-align: right;">
                  {{getProficiency ../../../actor category proficiency 'status'}}
                </span>
              </div>
              {{#each (range 3) as |index|}}
                <div class="proficiency-column-dice">
                  <a
                    class="prof-d20 d20-{{getProficiencyDice ../../../../actor category proficiency index}}"
                    data-proficiency="{{proficiency}}"
                    data-action="rollProficiency"
                    data-tooltip="{{getProficiencyDice ../../../../actor category proficiency index}}">
                  </a>
                </div>
              {{/each}}
            </div>
          {{/each}}
        </div>
      {{/each}}
    </div>
  {{/each}}
  <div style="display: flex; justify-content: end; margin-top: -20px; margin-left: auto; margin-right: 15px; gap: 5px; white-space: nowrap; align-items: center;">
    {{genName "PracticeHours"}}
    <span class="output" style="width: 115px;">{{system.PracticeHours.used}} / {{system.PracticeHours.max}}</span>
  </div>
</section>