<div class="section right-aligned-text">
  <div class="title">
    <div class="section-title">{{genName "Progress"}}</div>
  </div>
  <div class="generic-table section-content">
    <div class="table-row">
      <div class="table-data">
      </div>
      <div class="table-header center-cell">
        <b>{{genName "Used"}}</b>
      </div>
      <div class="table-header center-cell">
        <b>{{genName "Available"}}</b>
      </div>
    </div>
    <div class="table-row">
      <div class="table-data">
        <div class="column-name lineheight">
            {{genName "PracticeHours"}}
        </div>
      </div>
      <div class="table-data center-cell">
        <span class="output" style="width: 80px;">{{system.PracticeHours.used}}</span>
      </div>
      <div class="table-data center-cell" {{#if userIsGM}}title="{{chatName 'level up help'}}"{{/if}}>
        {{#if userIsGM}}
        <input style="width: 80px; text-align: center;" value="{{system.PracticeHours.max}}" name="system.PracticeHours.max" type="number">
        {{else}}
        <span class="output" style="width: 80px;">{{system.PracticeHours.max}}</span>
        {{/if}}
      </div>
    </div>
    <div class="table-row">
      <div class="table-data">
        <div class="column-name lineheight">
            {{genName "AdvantagePoints"}}
        </div>
      </div>
      <div class="table-data center-cell">
        <span class="output" style="width: 80px;">{{system.AdvantagePoints.used}}</span>
      </div>
      <div class="table-data center-cell">
        <span class="output" style="width: 80px;">{{system.AdvantagePoints.max}}</span>
      </div>
    </div>
  </div>
</div>
