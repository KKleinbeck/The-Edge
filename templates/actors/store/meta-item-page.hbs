<section
  class="tab {{getEntries tabs tab 'cssClass'}}"
  data-group="primary"
  data-tab="{{tab}}"
>
{{#if (checkSubtypedItem tab)}}
{{#each groups as |items subtype|}}
  <h3>{{itemName subtype}}</h3>
  <div class="store-grid">
    {{#each items as |item|}}
    {{> systems/the_edge/templates/actors/store/meta-item.hbs
      id=item._id userIsGM=../../userIsGM storeDetails=../../store.system}}
    {{/each}}
  </div>
{{/each}}
{{else}}
  <div class="store-grid">
    {{#each items as |item|}}
    {{> systems/the_edge/templates/actors/store/meta-item.hbs
      id=item._id userIsGM=../userIsGM storeDetails=../store.system}}
    {{/each}}
  </div>
{{/if}}
</section>
